<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="chromsystems.shopcontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

  <article id="productcollection-view">
    <header class="page-header">
      <h1 tal:content="context/Title" />
    </header>
    <div tal:condition="context/relatedProducts">
      <h2 i18n:translate="">Products:</h2>
      <tal:block tal:repeat="rel context/relatedProducts">
        <div class="media">
          <h4 tal:content="rel/to_object/Title" />
          <a href=""
            tal:attributes="href rel/to_object/absolute_url">Show Item</a>
        </div>
      </tal:block>
    </div>
    <section tal:condition="context/headlines">
      <h2>Headline</h2>
      <code tal:content="context/headlines" />
    </section>
  </article>
    
  </metal:content-core>
</metal:main>

</body>
</html>

